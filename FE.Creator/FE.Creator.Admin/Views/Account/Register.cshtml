@model FE.Creator.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="register-box-body">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group has-feedback">
            <label for="Email">
                @FE.Creator.Admin.lang.AppLang.LOGIN_LBL_EMAIL
            </label>
            <input name="Email" id="Email" type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <label for="Password">
                @FE.Creator.Admin.lang.AppLang.LOGIN_LBL_PASS
            </label>
            <input name="Password" id="Password" type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <label for="Password2">
                @FE.Creator.Admin.lang.AppLang.LOGIN_LBL_CONFIRMPASS
            </label>
            <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox"> @Html.Raw(FE.Creator.Admin.lang.AppLang.LOGIN_LBL_AGREE_TERM)
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-success btn-block btn-flat">@FE.Creator.Admin.lang.AppLang.LOGIN_BTN_REGISTER</button>
            </div>
        </div>
    }
    <a href="@Url.Action("Login")" class="text-center">@FE.Creator.Admin.lang.AppLang.LOGIN_LBL_ALREADY_MEMBER</a>
    @section Scripts {
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
    }
</div>
@{
    ViewBag.Title = @FE.Creator.Admin.lang.AppLang.ABOUT_TITLE;
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header text-center">
                <h2>@FE.Creator.Admin.lang.AppLang.ABOUT_WHYFECONSOLE</h2>
            </div>
            <div class="box-body box-profile">
                <p>
                   @FE.Creator.Admin.lang.AppLang.ABOUT_WHYDESC
                </p>
            </div>
            <!-- /.box-body -->
        </div>

    </div>
</div>


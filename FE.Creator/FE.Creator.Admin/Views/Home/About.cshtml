                        </tr>
                        <tr>
                            <td>CKEditor</td>
                            <td>V4</td>
                            <td>
                                <div><span class="label label-primary"><i class="fa fa-fw fa-balance-scale"></i> LGPL</span></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--About the Author-->
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@FE.Creator.Admin.lang.AppLang.ABOUT_THE_AUTHOR</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <strong><i class="fa fa-book margin-r-5"></i> @FE.Creator.Admin.lang.AppLang.ABOUT_INTRODUCTION</strong>
                <p class="text-muted">
                    @FE.Creator.Admin.lang.AppLang.ABOUT_INTRO_CONTENT
                </p>
                <hr>
                <strong><i class="fa fa-map-marker margin-r-5"></i> @FE.Creator.Admin.lang.AppLang.ABOUT_LOCATION</strong>
                <p class="text-muted"> @FE.Creator.Admin.lang.AppLang.ABOUT_LOC_CONTENT</p>
                <hr>
                <strong><i class="fa fa-comments margin-r-5"></i> @FE.Creator.Admin.lang.AppLang.ABOUT_CONTACT_INFO</strong>
                <p>
                    <span class="label label-primary"><i class="fa fa-envelope-o margin-r-5"></i> alpha_executive@126.com</span>
                    <span class="label label-info"><i class="fa fa-linkedin margin-r-5"></i> alphateam.zhang@gmail.com</span>
                    <span class="label label-success"><i class="fa fa-weixin margin-r-5"></i> ksfounder</span>
                </p>
                <hr>
                <strong><i class="fa fa-file-text-o margin-r-5"></i> @FE.Creator.Admin.lang.AppLang.ABOUT_NOTES</strong>
                <p class="text-muted">@FE.Creator.Admin.lang.AppLang.ABOUT_NOTES_CONTENT</p>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>

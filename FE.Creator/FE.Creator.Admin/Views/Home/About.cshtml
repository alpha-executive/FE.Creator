                <div>@FE.Creator.Admin.lang.AppLang.ABOUT_APP_LICENSE <label class="label label-warning"><i class="fa fa-fw fa-balance-scale"></i> MIT License</label></div>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>@FE.Creator.Admin.lang.AppLang.ABOUT_COMPONENT_NAME</th>
                            <th style="width:20%;">@FE.Creator.Admin.lang.AppLang.ABOUT_COMPONENT_VERSION</th>
                            <th style="width:20%;">@FE.Creator.Admin.lang.AppLang.ABOUT_COMPONENT_LICENSE</th>
                        </tr>
                        <tr>
                            <td>AdminLTE</td>
                            <td>V2.3.6</td>

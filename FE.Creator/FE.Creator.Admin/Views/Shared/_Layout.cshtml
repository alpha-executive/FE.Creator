<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - @FE.Creator.Admin.lang.AppLang.LAYOUT_ADMIN_CONSOLE</title>
    @Styles.Render("~/css/adminlte")
    @Styles.Render("~/css/bootstrap-weather")   
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    @Scripts.Render("~/bundles/respond")
    <![endif]-->

    @Scripts.Render("~/js/adminlte")
    @Scripts.Render("~/js/ckeditor")
    @Scripts.Render("~/js/ckeditor-jquery")
    @Scripts.Render("~/js/angularjs")
    @Scripts.Render("~/js/angularroute")
    @Scripts.Render("~/js/angularmessage")
    @Scripts.Render("~/js/angularselect")
    @Scripts.Render("~/js/angularupload")
    @Scripts.Render("~/js/adminapp/objectrepository")
    @Scripts.Render("~/js/adminapp/dataservice")
    @Scripts.Render("~/js/adminapp/pageservice")
    @Scripts.Render("~/js/adminapp/objectutilservice")
    @Scripts.Render("~/js/adminapp/usersimpleprofile")

    <script type="text/javascript" src='@Url.Action("LocalizationJS","Home")'></script>
</head>
<body class="hold-transition skin-blue-light sidebar-mini sidebar-collapse">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>FE</b>A</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>FE</b>@FE.Creator.Admin.lang.AppLang.LAYOUT_CONSOLE</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_TOGGLE</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <li id="provider_update_nav"  class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span id="msg_count" class="label label-success">0</span>
                            </a>
                            <ul id="provider_updates" class="dropdown-menu">
                                <li class="header"></li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span id="event_counter" class="label label-warning">0</span>
                            </a>
                            <ul id="event_updates" class="dropdown-menu">
                                <li class="header"></li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                    </ul>
                                </li>
                                <li class="footer"><a href="/ngview/Index/Settings/SystemEventIndex">@FE.Creator.Admin.lang.AppLang.APPEVENT_VIEW_ALL_EVENTS</a></li>
                            </ul>
                        </li>
                        <!-- Tasks: style can be found in dropdown.less -->
                        <li id="tasks_on_menu" class="dropdown tasks-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-flag-o"></i>
                                <span class="label label-danger taskcount">0</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header"></li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                    </ul>
                                </li>
                                <li class="footer">
                                    <a href="/ngview/Index/Efficiency/TaskIndex">@FE.Creator.Admin.lang.AppLang.TASKMGR_VIEW_ALL_TASK</a>
                                </li>
                            </ul>
                        </li>
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Content/apps/img/userdefault.png" class="user-image img-curr-login" alt="User Image">
                                <span class="hidden-xs login-user-name">@Request.RequestContext.HttpContext.User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Content/apps/img/userdefault.png" class="img-circle img-curr-login" alt="User Image">
                                    <p>
                                        <span class="login-user-name">@Request.RequestContext.HttpContext.User.Identity.Name</span>
                                        <small id="loginUserBirthDate"></small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat" id="loginUserProfileLink">@FE.Creator.Admin.lang.AppLang.LAYOUT_PROFILE</a>
                                    </div>
                                    <div class="pull-right">
                                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-default btn-flat">@FE.Creator.Admin.lang.AppLang.LAYOUT_SIGNOUT</button>
                                            }
                                    </div>
                                </li>
                            </ul>

                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="/ngview/Index/Settings/AppSettingsIndex"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@Url.Content("~/Content/apps/img/userdefault.png")" class="img-circle img-curr-login" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p class="login-user-name">@Request.RequestContext.HttpContext.User.Identity.Name</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> @FE.Creator.Admin.lang.AppLang.LAYOUT_STATUS_ONLINE</a>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_MAIN</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-cogs"></i> <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_SYSCONF</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/ngview/Index/Settings/SystemEventIndex"><i class="fa fa-bell"></i>@FE.Creator.Admin.lang.AppLang.APPEVENT_TITLE</a></li>
                            <li><a href="/ngview/Index/Settings/AppSettingsIndex"><i class="fa fa-gears"></i>@FE.Creator.Admin.lang.AppLang.LAYOUT_SYSTEM_SETTINGS</a></li>
                            <li><a href="/ngview/Index/LicenseManagement/LicenseIndex"><i class="fa fa-balance-scale"></i>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_LICENSE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-diamond"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_DATAMGR</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-red">@FE.Creator.Admin.lang.AppLang.INDEX_MENU_HOT</small>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/ngview/Index/ObjectRepository/ObjectDefinitionGroupIndex"><i class="fa fa-object-group"></i> @FE.Creator.Admin.lang.AppLang.DATA_CUST_TABLEGROUP</a></li>
                            <li><a href="/ngview/Index/ObjectRepository/ObjectDefinitionIndex"><i class="fa fa-table"></i> @FE.Creator.Admin.lang.AppLang.DATA_CUST_TABLE</a></li>
                            <li><a href="/ngview/Index/ObjectRepository/GeneralObjectIndex"><i class="fa fa-opera"></i> @FE.Creator.Admin.lang.AppLang.DATA_CUST_TABLE_DATA</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/ngview/Index/Documents/DocumentIndex">
                            <i class="fa fa-folder"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_DOCUMENTS</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ngview/Index/Books/BookIndex">
                            <i class="fa fa-book"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_BOOKS</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ngview/Index/Photos/PhotoIndex">
                            <i class="fa fa-image"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_PHOTOS</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-rocket"></i> <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_EFFICIENCY</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-yellow"><i class="fa fa-industry"></i></small>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/ngview/Index/Efficiency/TaskIndex"><i class="fa fa-tasks"></i> @FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_TASKMGR</a></li>
                            <li><a href="/ngview/Index/Efficiency/DiaryIndex"><i class="fa fa-edit"></i> @FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_DIARY</a></li>
                            <li><a href="/ngview/Index/Efficiency/ArticleIndex"><i class="fa fa-lightbulb-o"></i> @FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_POSTS</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/ngview/Index/Contacts/ContactsIndex">
                            <i class="fa fa-phone-square"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_CONTACTS</span>
                        </a>
                    </li>
                    <li>
                        <a href="/ngview/Index/AccountManagement/AccountIndex">
                            <i class="fa fa-expeditedssl"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_ACTMGR</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-users"></i> <span>@FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_USRMGR</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-green"><i class="fa fa-heart-o"></i></small>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/ngview/Index/SystemUsers/UsersIndex"><i class="fa fa-opera"></i> @FE.Creator.Admin.lang.AppLang.LAYOUT_NAV_SYSUSR</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Home/About">
                            <i class="fa fa-info-circle"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.INDEX_ABOUT</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Help">
                            <i class="fa fa-question-circle"></i>
                            <span>@FE.Creator.Admin.lang.AppLang.INDEX_HELP</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewBag.Title - @FE.Creator.Admin.lang.AppLang.LAYOUT_ADMIN_CONSOLE
                    <small>@FE.Creator.Admin.lang.AppLang.LAYOUT_SUBTITLE</small>
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>@FE.Creator.Admin.lang.AppLang.LAYOUT_VERSION</b> 1.0.0.0
            </div>
            <strong>@FE.Creator.Admin.lang.AppLang.LAYOUT_COPYRIGHT <a href="#">@FE.Creator.Admin.lang.AppLang.LAYOUT_COMPANY</a>.</strong> @FE.Creator.Admin.lang.AppLang.LAYOUT_COPYRIGHT_STR
        </footer>
    </div>
        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            // To make Pace works on Ajax calls
            $(document).ajaxStart(function () { Pace.restart(); });
        </script>
</body>
</html>

@{
   ViewBag.Title = "Article Management";
}
<div class="row" ng-app="ngObjectRepository" ng-controller="ContactController as ctrl">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Contacts</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <button  class="btn btn-default" ng-click="ctrl.newContact()"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>User Name</th>
                            <th>Contact Frequency</th>
                            <th>Mobile Phone</th>
                            <th>Relationship Note</th>
                            <th>Action</th>
                        </tr>
                        <tr ng-repeat="contact in ctrl.contacts">
                            <td ng-bind="contact.properties.profile.firstName.value + ',' + contact.properties.profile.lastName.value"></td>
                            <td><span class="label label-danger">Closed</span></td>
                            <td></td>
                            <td ng-bind="contact.properties.relationship.value"></td>
                            <td>
                                <a class="btn btn-flat btn-sm" href="/ngView/EditOrDisplay/SystemUsers/UserProfileIndex/{{contact.properties.contactUID.value}}"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>

    </div>
</div>
@section Scripts{
    @Scripts.Render("~/js/adminapp/contacts")
}
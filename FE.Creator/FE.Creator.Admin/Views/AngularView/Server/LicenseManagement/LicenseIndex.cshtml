@{
    ViewBag.Title = "Objects Management";
}
<div ng-app="ngObjectRepository">
    <div class="row" ng-controller="LicenseController as ctrl">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">License Management</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <button class="btn btn-warning" type="file" ngf-select="ctrl.uploadFiles($file, $invalidFiles)" ngf-max-height="1000" ngf-max-size="10MB">
                        <i class="fa fa-upload"></i> Upload Your License <i class="fa fa-refresh fa-spin text-green" ng-if="ctrl.f.showprogress"></i>
                    </button><span class="message">{{ctrl.errorMsg}}</span>
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Modules in System</h3>
                </div>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Module ID</th>
                            <th>Module Name</th>
                            <th>Description</th>
                            <th>Licensed</th>
                            <th>Expired Date</th>
                        </tr>
                        <tr ng-repeat="module in ctrl.moduleList">
                            <td>{{module.moduleId}}</td>
                            <td>{{module.moduleName}}</td>
                            <td>{{module.moduleDescription}}</td>
                            <td>
                                <span class="badge bg-green" ng-if="module.licensed == true">{{module.licensed}}</span>
                                <span class="badge bg-red" ng-if="module.licensed == false">{{module.licensed}}</span>
                            </td>
                            <td>{{module.expiredDate}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/js/adminapp/licensemgr")
}
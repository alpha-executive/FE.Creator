<div class="box box-primary">
    <div class="box-body no-border">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2"><i class="fa fa-tag"></i> Task Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" ng-model="ctrl.currentTask.objectName" auto-focus />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-tag"></i> Description
                </label>
                <div class="col-sm-10">
                    <textarea rows="3" class="form-control" ng-model="ctrl.currentTask.properties.taskDesc.value"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-tag"></i> Task Type
                </label>
                <div class="col-sm-10">
                    <div class="form-control">
                        <input type="radio" ng-model="ctrl.currentTask.properties.taskType.value" ng-value="0" ng-checked="ctrl.currentTask.properties.taskType.value == 0" /> Important
                        <input type="radio" ng-model="ctrl.currentTask.properties.taskType.value" ng-value="1" ng-checked="ctrl.currentTask.properties.taskType.value == 1" /> Medium
                        <input type="radio" ng-model="ctrl.currentTask.properties.taskType.value" ng-value="2" ng-checked="ctrl.currentTask.properties.taskType.value == 2" /> Low
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-tag"></i> Start Date
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control field-datepicker" ng-model="ctrl.currentTask.properties.taskStartDate.value" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">
                    <i class="fa fa-tag"></i> End Date
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control field-datepicker" ng-model="ctrl.currentTask.properties.taskExpEndDate.value" />
                </div>
            </div>
            <ul class="list-inline">
                <li class="pull-right">
                    <button class="btn btn-box-tool" type="button" ng-click="ctrl.saveTask()"><i class="fa fa-save"></i> Save</button>
                    <button class="btn btn-box-tool" type="button" ng-click="ctrl.cancelTask()"><i class="fa fa-close "></i> Cancel</button>
                </li>
            </ul>
        </form>
    </div>
</div>
<script type="text/javascript">
                                $(function () {
                                    $(".field-datepicker").datepicker({
                                       autoclose : true
                                    })
                                });
</script>
